<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/IbNuevo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stat_nuevo"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/IbBorrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_stat_borrar" />

        <ImageButton
            android:id="@+id/IbPintar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_stat_pintar" />


    </LinearLayout>

        <view
            android:id="@+id/lienzo"
            class="com.Johana.paint.Lienzo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />


</LinearLayout>